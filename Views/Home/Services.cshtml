@{
    ViewData["Title"] = "Services";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header bg-primary text-white p-4 rounded mb-4">
                <h1 class="display-4">
                    <i class="bi bi-tools"></i> Our Services
                </h1>
                <p class="lead">Comprehensive car rental services tailored to your needs</p>
            </div>
        </div>
    </div>

    <!-- Services Grid -->
    <div class="row">
        <!-- Car Rental Service -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary rounded-circle p-3 me-3">
                            <i class="bi bi-car-front text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="card-title mb-0">Car Rental</h3>
                    </div>
                    <p class="card-text text-muted">
                        Rent cars for short-term or long-term periods. We offer flexible rental options 
                        with competitive pricing and a wide selection of vehicles.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Daily, weekly, and monthly rentals</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Flexible pickup and drop-off locations</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>24/7 customer support</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Comprehensive insurance coverage</li>
                    </ul>
                    <button class="btn btn-primary">
                        <i class="bi bi-arrow-right"></i> Learn More
                    </button>
                </div>
            </div>
        </div>

        <!-- Corporate Rental -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-success rounded-circle p-3 me-3">
                            <i class="bi bi-building text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="card-title mb-0">Corporate Rental</h3>
                    </div>
                    <p class="card-text text-muted">
                        Specialized services for businesses and organizations. Manage your fleet 
                        efficiently with our corporate rental solutions.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Volume discounts for businesses</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Dedicated account management</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Monthly billing and reporting</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Priority booking and support</li>
                    </ul>
                    <button class="btn btn-success">
                        <i class="bi bi-arrow-right"></i> Learn More
                    </button>
                </div>
            </div>
        </div>

        <!-- Chauffeur Service -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-warning rounded-circle p-3 me-3">
                            <i class="bi bi-person-badge text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="card-title mb-0">Chauffeur Service</h3>
                    </div>
                    <p class="card-text text-muted">
                        Professional chauffeur service for special occasions, business meetings, 
                        or airport transfers. Sit back and relax while we handle the driving.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Professional licensed drivers</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Airport pickup and drop-off</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Event transportation</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Luxury vehicle options</li>
                    </ul>
                    <button class="btn btn-warning">
                        <i class="bi bi-arrow-right"></i> Learn More
                    </button>
                </div>
            </div>
        </div>

        <!-- Maintenance & Support -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-info rounded-circle p-3 me-3">
                            <i class="bi bi-wrench text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="card-title mb-0">Maintenance & Support</h3>
                    </div>
                    <p class="card-text text-muted">
                        Comprehensive maintenance and roadside assistance services. 
                        We ensure your rental experience is smooth and worry-free.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>24/7 roadside assistance</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Regular vehicle maintenance</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Emergency replacement vehicles</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Technical support hotline</li>
                    </ul>
                    <button class="btn btn-info">
                        <i class="bi bi-arrow-right"></i> Learn More
                    </button>
                </div>
            </div>
        </div>

        <!-- Insurance Services -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-danger rounded-circle p-3 me-3">
                            <i class="bi bi-shield-check text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="card-title mb-0">Insurance Services</h3>
                    </div>
                    <p class="card-text text-muted">
                        Comprehensive insurance coverage options to protect you during your rental. 
                        Choose the coverage that best fits your needs and budget.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Collision damage waiver</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Personal accident insurance</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Third-party liability coverage</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Personal effects coverage</li>
                    </ul>
                    <button class="btn btn-danger">
                        <i class="bi bi-arrow-right"></i> Learn More
                    </button>
                </div>
            </div>
        </div>

        <!-- Special Events -->
        <div class="col-lg-6 col-md-12 mb-4">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-secondary rounded-circle p-3 me-3">
                            <i class="bi bi-calendar-event text-white" style="font-size: 2rem;"></i>
                        </div>
                        <h3 class="card-title mb-0">Special Events</h3>
                    </div>
                    <p class="card-text text-muted">
                        Specialized rental services for weddings, corporate events, parties, 
                        and other special occasions. Make your event memorable with our premium vehicles.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="bi bi-check-circle text-success me-2"></i>Wedding transportation</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Corporate event fleets</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Party bus rentals</li>
                        <li><i class="bi bi-check-circle text-success me-2"></i>Custom decoration options</li>
                    </ul>
                    <button class="btn btn-secondary">
                        <i class="bi bi-arrow-right"></i> Learn More
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Services Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class="bi bi-plus-circle"></i> Additional Services
                    </h3>
                    <div class="row">
                        <div class="col-md-3 col-6 mb-3 text-center">
                            <i class="bi bi-credit-card text-primary" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">Flexible Payment Options</p>
                        </div>
                        <div class="col-md-3 col-6 mb-3 text-center">
                            <i class="bi bi-phone text-success" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">Mobile App Booking</p>
                        </div>
                        <div class="col-md-3 col-6 mb-3 text-center">
                            <i class="bi bi-gift text-warning" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">Loyalty Rewards Program</p>
                        </div>
                        <div class="col-md-3 col-6 mb-3 text-center">
                            <i class="bi bi-headset text-info" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0">24/7 Customer Support</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 