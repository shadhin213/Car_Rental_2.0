<style>
    .vehicle-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .vehicle-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    
    .vehicle-card .card-img-top {
        padding: 0 !important;
        overflow: hidden;
    }
    
    .vehicle-card img {
        height: 200px;
        object-fit: cover;
        width: 100%;
        border-radius: 8px 8px 0 0;
    }
    
    /* Filter indicator styling */
    .filter-indicator {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 25px;
        padding: 0.75rem 1.5rem;
        color: white;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .filter-indicator .btn-outline-light {
        border-radius: 20px;
        border: 2px solid white;
        transition: all 0.3s ease;
    }
    
    .filter-indicator .btn-outline-light:hover {
        background: white;
        color: #667eea;
        transform: translateY(-2px);
    }
    
    /* Vehicle type specific styling */
    .vehicle-type-motor-bike .vehicle-card {
        border-left: 4px solid #6f42c1;
    }
    
    .vehicle-type-cng .vehicle-card {
        border-left: 4px solid #28a745;
    }
    
    .vehicle-type-private-car .vehicle-card {
        border-left: 4px solid #007bff;
    }
    
    .vehicle-type-pickup .vehicle-card {
        border-left: 4px solid #ffc107;
    }
    
    .vehicle-type-truck .vehicle-card {
        border-left: 4px solid #fd7e14;
    }
    
    .vehicle-type-covered-van .vehicle-card {
        border-left: 4px solid #dc3545;
    }
</style>

