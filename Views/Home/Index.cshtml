<script>
// Vehicle type filtering functionality
document.addEventListener('DOMContentLoaded', function() {
    // Get the selected vehicle type from the URL
    const urlParams = new URLSearchParams(window.location.search);
    const selectedVehicleType = urlParams.get('vehicleType');
    
    if (selectedVehicleType) {
        // Add smooth scroll to the featured vehicles section
        const featuredSection = document.querySelector('#features').nextElementSibling;
        if (featuredSection) {
            setTimeout(() => {
                featuredSection.scrollIntoView({ 
                    behavior: 'smooth', 
                    block: 'start' 
                });
            }, 500);
        }
        
        // Add animation to the filter indicator
        const filterIndicator = document.querySelector('.filter-indicator');
        if (filterIndicator) {
            filterIndicator.style.opacity = '0';
            filterIndicator.style.transform = 'translateY(-20px)';
            
            setTimeout(() => {
                filterIndicator.style.transition = 'all 0.5s ease';
                filterIndicator.style.opacity = '1';
                filterIndicator.style.transform = 'translateY(0)';
            }, 300);
        }
        
        // Add vehicle type specific animations
        const vehicleCards = document.querySelectorAll('.vehicle-card');
        vehicleCards.forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(30px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.5s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 500 + (index * 100));
        });
    }
    
    // Add click event to vehicle type navigation items
    const vehicleTypeLinks = document.querySelectorAll('.dropdown-item[href*="vehicleType"]');
    vehicleTypeLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            // Add loading state
            const originalText = this.innerHTML;
            this.innerHTML = '<i class="bi bi-arrow-clockwise spin"></i> Loading...';
            this.style.pointerEvents = 'none';
            
            // Navigate to the filtered page
            setTimeout(() => {
                window.location.href = this.href;
            }, 300);
        });
    });
    
    // Add smooth transitions for vehicle cards
    const allVehicleCards = document.querySelectorAll('.vehicle-card');
    allVehicleCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    });
});

// Add CSS for spinning animation
const style = document.createElement('style');
style.textContent = `
    .spin {
        animation: spin 1s linear infinite;
    }
    
    @@keyframes spin {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    .vehicle-card {
        transition: all 0.3s ease;
    }
    
    .filter-indicator {
        transition: all 0.3s ease;
    }
`;
document.head.appendChild(style);
</script>
