<!-- Featured Vehicles Section -->
<div class="container mb-5">
    @if (!string.IsNullOrEmpty(ViewBag.SelectedVehicleType))
    {
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Home")" class="text-decoration-none">
                        <i class="bi bi-house"></i> Home
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#" class="text-decoration-none">
                        <i class="bi bi-truck"></i> Vehicle Types
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <i class="bi bi-funnel"></i> @ViewBag.SelectedVehicleType
                </li>
            </ol>
        </nav>
    }
    
    <h2 class="text-center mb-5">
        <i class="bi bi-car-front text-primary"></i> 
        @if (!string.IsNullOrEmpty(ViewBag.SelectedVehicleType))
        {
            <span>@ViewBag.SelectedVehicleType.ToUpper() Vehicles</span>
        }
        else
        {
            <span>Featured Vehicles</span>
        }
    </h2>
    
    @if (!string.IsNullOrEmpty(ViewBag.SelectedVehicleType))
    {
        <div class="text-center mb-4">
            <div class="alert filter-indicator d-inline-block">
                <i class="bi bi-funnel"></i> 
                Showing vehicles filtered by: <strong>@ViewBag.SelectedVehicleType</strong>
                <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-outline-light ms-3">
                    <i class="bi bi-x-circle"></i> Clear Filter
                </a>
            </div>
        </div>
    }
    
    <div class="row g-4 @if (!string.IsNullOrEmpty(ViewBag.SelectedVehicleType)) { <text>vehicle-type-@ViewBag.SelectedVehicleType.ToLower().Replace(" ", "-")</text> }">
        @{
            var featuredVehicles = ViewBag.FeaturedVehicles as List<CarRentalManagementSystem.Models.VehicleViewModel> ?? new List<CarRentalManagementSystem.Models.VehicleViewModel>();
        }
        
        @if (featuredVehicles.Any())
        {
            @foreach (var vehicle in featuredVehicles.Take(6))
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm vehicle-card">
                        <div class="card-img-top bg-light text-center p-4 position-relative">
                            @if (!string.IsNullOrEmpty(vehicle.ImageUrl))
                            {
                                <img src="@vehicle.ImageUrl" alt="@vehicle.Model" class="img-fluid" style="max-height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                @switch (vehicle.VehicleType.ToLower())
                                {
                                    case "motor bike":
                                        <i class="bi bi-bicycle" style="font-size: 4rem; color: #6f42c1;"></i>
                                        break;
                                    case "cng":
                                        <i class="bi bi-fuel-pump" style="font-size: 4rem; color: #28a745;"></i>
                                        break;
                                    case "private car":
                                        <i class="bi bi-car-front" style="font-size: 4rem; color: #007bff;"></i>
                                        break;
                                    case "pickup":
                                        <i class="bi bi-truck" style="font-size: 4rem; color: #ffc107;"></i>
                                        break;
                                    case "truck":
                                        <i class="bi bi-truck" style="font-size: 4rem; color: #fd7e14;"></i>
                                        break;
                                    case "covered van":
                                        <i class="bi bi-van" style="font-size: 4rem; color: #dc3545;"></i>
                                        break;
                                    default:
                                        <i class="bi bi-car-front" style="font-size: 4rem; color: #6c757d;"></i>
                                        break;
                                }
                            }
                            <span class="badge @(vehicle.Status == "Available" ? "bg-success" : "bg-warning") position-absolute top-0 end-0 m-2">
                                @vehicle.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@vehicle.Model</h5>
                            <p class="card-text text-muted">
                                @vehicle.VehicleType • @vehicle.Year • @vehicle.FuelType
                            </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary fw-bold">$@vehicle.DailyRate/day</span>
                                <small class="text-muted">@vehicle.EngineCapacity</small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary w-100">
                                <i class="bi bi-calendar-plus"></i> Rent Now
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> 
                    @if (!string.IsNullOrEmpty(ViewBag.SelectedVehicleType))
                    {
                        <span>No @ViewBag.SelectedVehicleType vehicles available at the moment. Please check back later or try a different vehicle type.</span>
                    }
                    else
                    {
                        <span>No vehicles available at the moment. Please check back later.</span>
                    }
                </div>
            </div>
        }
    </div>
    
    @if (featuredVehicles.Any())
    {
        <div class="text-center mt-4">
            <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-car-front"></i> 
                @if (!string.IsNullOrEmpty(ViewBag.SelectedVehicleType))
                {
                    <span>View All @ViewBag.SelectedVehicleType Vehicles</span>
                }
                else
                {
                    <span>View All Vehicles</span>
                }
            </a>
        </div>
    }
</div>

