@{
    ViewData["Title"] = "About Us";
}

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row">
        <div class="col-12">
            <div class="page-header bg-primary text-white p-5 rounded mb-4">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h1 class="display-4">
                            <i class="bi bi-info-circle"></i> About Us
                        </h1>
                        <p class="lead">Your trusted partner in car rental services since 2010</p>
                        <p class="mb-0">We are committed to providing exceptional car rental experiences with a focus on quality, reliability, and customer satisfaction.</p>
                    </div>
                    <div class="col-lg-4 text-center">
                        <i class="bi bi-car-front" style="font-size: 8rem; opacity: 0.3;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Company Story -->
    <div class="row mb-5">
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title text-primary">
                        <i class="bi bi-book"></i> Our Story
                    </h3>
                    <p class="card-text">
                        Founded in 2010, Car Rental Management System has grown from a small local business 
                        to one of the region's leading car rental companies. Our journey began with a simple 
                        mission: to provide reliable, affordable, and convenient car rental services to our community.
                    </p>
                    <p class="card-text">
                        Over the years, we've expanded our fleet to include a diverse range of vehicles, 
                        from economy cars to luxury vehicles, trucks, and buses. Our commitment to customer 
                        satisfaction has remained at the heart of everything we do.
                    </p>
                    <p class="card-text">
                        Today, we serve thousands of customers annually, providing transportation solutions 
                        for business travel, leisure trips, special events, and everyday needs.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <h3 class="card-title text-success">
                        <i class="bi bi-target"></i> Our Mission
                    </h3>
                    <p class="card-text">
                        To provide exceptional car rental services that exceed customer expectations 
                        through innovation, reliability, and personalized care.
                    </p>
                    <h5 class="text-primary mt-4">Our Values:</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Quality:</strong> We maintain the highest standards in vehicle maintenance and service
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Reliability:</strong> We deliver on our promises, every time
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Integrity:</strong> We conduct business with honesty and transparency
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Innovation:</strong> We continuously improve our services and technology
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle text-success me-2"></i>
                            <strong>Customer Focus:</strong> Our customers are at the center of everything we do
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-light border-0">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class="bi bi-graph-up"></i> Our Numbers
                    </h3>
                    <div class="row text-center">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="bg-primary text-white rounded p-3">
                                <i class="bi bi-car-front" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 mb-0">500+</h4>
                                <p class="mb-0">Vehicles in Fleet</p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="bg-success text-white rounded p-3">
                                <i class="bi bi-people" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 mb-0">50,000+</h4>
                                <p class="mb-0">Happy Customers</p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="bg-warning text-white rounded p-3">
                                <i class="bi bi-calendar-check" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 mb-0">15+</h4>
                                <p class="mb-0">Years of Experience</p>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <div class="bg-info text-white rounded p-3">
                                <i class="bi bi-geo-alt" style="font-size: 2.5rem;"></i>
                                <h4 class="mt-2 mb-0">25+</h4>
                                <p class="mb-0">Locations</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Team Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h3 class="text-center mb-4">
                <i class="bi bi-people-fill"></i> Our Leadership Team
            </h3>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="bg-primary rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="bi bi-person text-white" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">John Smith</h5>
                    <p class="text-muted">CEO & Founder</p>
                    <p class="card-text">
                        With over 20 years of experience in the automotive industry, 
                        John leads our company with vision and dedication.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="bg-success rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="bi bi-person text-white" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Sarah Johnson</h5>
                    <p class="text-muted">Operations Manager</p>
                    <p class="card-text">
                        Sarah ensures smooth operations and maintains our high service 
                        standards across all locations.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card text-center border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="bg-warning rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                        <i class="bi bi-person text-white" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="card-title">Michael Brown</h5>
                    <p class="text-muted">Customer Service Director</p>
                    <p class="card-text">
                        Michael leads our customer service team, ensuring every customer 
                        receives exceptional support and care.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Awards & Recognition -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">
                        <i class="bi bi-trophy"></i> Awards & Recognition
                    </h3>
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-award text-warning" style="font-size: 3rem;"></i>
                            <h5 class="mt-2">Best Car Rental Service 2023</h5>
                            <p class="text-muted">Regional Business Awards</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-star text-warning" style="font-size: 3rem;"></i>
                            <h5 class="mt-2">Customer Choice Award 2022</h5>
                            <p class="text-muted">Automotive Excellence</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <i class="bi bi-heart text-danger" style="font-size: 3rem;"></i>
                            <h5 class="mt-2">Service Excellence 2021</h5>
                            <p class="text-muted">Customer Satisfaction</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-primary text-white text-center border-0">
                <div class="card-body p-5">
                    <h3 class="mb-3">Ready to Experience Our Service?</h3>
                    <p class="lead mb-4">Join thousands of satisfied customers who trust us for their transportation needs.</p>
                    <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-light btn-lg me-3">
                        <i class="bi bi-car-front"></i> Browse Cars
                    </a>
                    <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-envelope"></i> Contact Us
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 