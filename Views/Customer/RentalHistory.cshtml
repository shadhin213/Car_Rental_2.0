@{
    ViewData["Title"] = "Rental History";
    var userName = ViewBag.UserName as string ?? "Customer";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">Customer Portal</h4>
                    <p class="text-light">Welcome, @userName</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("CustomerDashboard", "Home")">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AvailableCars", "Home")">
                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("MyBookings", "Home")">
                            <i class="fas fa-calendar-check me-2"></i>My Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" href="@Url.Action("RentalHistory", "Home")">
                            <i class="fas fa-history me-2"></i>Rental History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Profile", "Home")">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#" data-bs-toggle="modal" data-bs-target="#complainModal">
                            <i class="fas fa-exclamation-circle me-2"></i>Complain
                        </a>
                    </li>
                </ul>
                <hr class="text-white">
                <div class="text-center">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm  text-light">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-history me-2"></i> Rental History
                    </h1>
                    <small class="text-muted">Welcome, @userName</small>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("CustomerDashboard", "Home")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                    </a>
                    <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary">
                        <i class="fas fa-car me-1"></i> Browse Cars
                    </a>
                </div>
            </div>

            <!-- Placeholder list -->
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Your Rental History</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <div>
                            This is a placeholder page. Past rentals will appear here once the rental records are implemented.
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Vehicle</th>
                                    <th>Rented On</th>
                                    <th>Returned On</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        No rentals to show yet.
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Complain Modal -->
<div class="modal fade" id="complainModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-circle me-2"></i>Submit a Complaint</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="complainForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="complainSubject" class="form-label">Subject <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="complainSubject" required>
                        </div>
                        <div class="col-md-6">
                            <label for="complainCategory" class="form-label">Category <span class="text-danger">*</span></label>
                            <select id="complainCategory" class="form-select" required>
                                <option value="">Select a category</option>
                                <option>Vehicle Issue</option>
                                <option>Booking Problem</option>
                                <option>Payment/Billing</option>
                                <option>Staff Behavior</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="complainMessage" class="form-label">Message <span class="text-danger">*</span></label>
                            <textarea id="complainMessage" class="form-control" rows="5" placeholder="Describe your issue in detail" required></textarea>
                        </div>
                        <div class="col-12">
                            <label for="complainAttachment" class="form-label">Attachment (optional)</label>
                            <input type="file" id="complainAttachment" class="form-control" accept="image/*,.pdf,.doc,.docx">
                            <small class="text-muted">You can attach screenshots or documents to help us understand the issue.</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="submitComplainBtn">
                    <i class="fas fa-paper-plane me-1"></i> Submit Complaint
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#submitComplainBtn').on('click', function () {
                const subject = $('#complainSubject').val().trim();
                const category = $('#complainCategory').val();
                const message = $('#complainMessage').val().trim();

                if (!subject || !category || !message) {
                    alert('Please fill in Subject, Category, and Message.');
                    return;
                }

                alert('Your complaint has been submitted. Our team will contact you shortly.');
                $('#complainForm')[0].reset();

                const modalEl = document.getElementById('complainModal');
                const modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                modal.hide();
            });
        });
    </script>
}

@section Styles {
    <style>
        .table thead th { font-weight: 600; }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }
        .sidebar .nav-link { color: #fff; padding: 0.75rem 1rem; border-radius: 0.375rem; margin: 0.25rem 0.5rem; }
        .sidebar .nav-link:hover { background-color: rgba(255, 255, 255, 0.1); color: #fff; }
        .sidebar .nav-link.active { background-color: rgba(255, 255, 255, 0.2); color: #fff; }

        @@media (max-width: 768px) {
            .sidebar { position: relative; height: auto; }
        }
    </style>
}
