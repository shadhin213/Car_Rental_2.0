@{ 
    ViewData["Title"] = "My Bookings";
    var userName = ViewBag.UserName as string ?? "Customer";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">Customer Portal</h4>
                    <p class="text-light">Welcome, @userName</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("CustomerDashboard", "Home")">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AvailableCars", "Home")">
                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" href="@Url.Action("MyBookings", "Home")">
                            <i class="fas fa-calendar-check me-2"></i>My Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("RentalHistory", "Home")">
                            <i class="fas fa-history me-2"></i>Rental History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Profile", "Home")">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#support">
                            <i class="fas fa-headset me-2"></i>Support
                        </a>
                    </li>
                </ul>
                <hr class="text-white">
                <div class="text-center">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm  text-light">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-calendar-check me-2"></i> My Bookings
                    </h1>
                    <small class="text-muted">Welcome, @userName</small>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("CustomerDashboard", "Home")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                    </a>
                    <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary">
                        <i class="fas fa-car me-1"></i> Browse Cars
                    </a>
                </div>
            </div>

            <!-- Placeholder info (replace with real bookings when backend is ready) -->
            <div class="row">
                <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Your Current and Past Bookings</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <div>
                            This is a placeholder page. Booking data will appear here when the booking feature is implemented.
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Vehicle</th>
                                    <th>Period</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        No bookings to show yet.
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Styles {
    <style>
        .table thead th { font-weight: 600; }

        /* Sidebar styles (mirroring Profile/CustomerDashboard) */
        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
        }

        .sidebar .nav-link {
            color: #fff;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin: 0.25rem 0.5rem;
        }

        .sidebar .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .sidebar .nav-link.active {
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        @@media (max-width: 768px) {
            .sidebar {
                position: relative;
                height: auto;
            }
        }
    </style>
}
