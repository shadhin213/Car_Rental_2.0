@{
    ViewData["Title"] = "My Bookings";
    var userName = ViewBag.UserName as string ?? "Customer";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
                <div>
                    <h1 class="h3 mb-0">
                        <i class="fas fa-calendar-check me-2"></i> My Bookings
                    </h1>
                    <small class="text-muted">Welcome, @userName</small>
                </div>
                <div class="d-flex gap-2">
                    <a href="@Url.Action("CustomerDashboard", "Home")" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
                    </a>
                    <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary">
                        <i class="fas fa-car me-1"></i> Browse Cars
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Placeholder info (replace with real bookings when backend is ready) -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Your Current and Past Bookings</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <div>
                            This is a placeholder page. Booking data will appear here when the booking feature is implemented.
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead>
                                <tr>
                                    <th>Reference</th>
                                    <th>Vehicle</th>
                                    <th>Period</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="6" class="text-center text-muted py-4">
                                        No bookings to show yet.
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table thead th { font-weight: 600; }
    </style>
}
