@model CarRentalManagementSystem.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">Customer Portal</h4>
                    <p class="text-light">Welcome, @ViewBag.UserName</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("CustomerDashboard", "Home")">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AvailableCars", "Home")">
                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("MyBookings", "Home")">
                            <i class="fas fa-calendar-check me-2"></i>My Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#rental-history">
                            <i class="fas fa-history me-2"></i>Rental History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white active" href="@Url.Action("Profile", "Home")">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#support">
                            <i class="fas fa-headset me-2"></i>Support
                        </a>
                    </li>
                </ul>
                <hr class="text-white">
                <div class="text-center">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm  text-light">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">My Profile</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="toggleEditMode()">
                            <i class="fas fa-edit me-1"></i><span id="editButtonText">Edit Profile</span>
                        </button>
                    </div>
                    <a href="@Url.Action("CustomerDashboard", "Home")" class="btn btn-sm btn-primary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                    </a>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="row">
                <!-- Profile Summary Card -->
                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-body text-center">
                            <div class="profile-image-container mb-3 position-relative" style="display: inline-block;">
                                <img id="profileImage" src="@(Model.ProfileImageUrl ?? "https://via.placeholder.com/120x120/007bff/ffffff?text=User")" 
                                     alt="Profile Picture" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid rgb(0, 255, 123);">
                                <div class="image-upload-overlay" style="display: none;">
                                    <input type="file" id="profileImageInput" accept="image/*" style="display: none;">
                                    <button type="button" class="btn btn-sm btn-outline-danger rounded-circle upload-btn" onclick="document.getElementById('profileImageInput').click()">
                                        <i class="fas fa-camera">ðŸ“¸</i>
                                    </button>
                                </div>
                            </div>
                            <h4 class="mb-0">@Model.FullName</h4>
                            <p class="text-muted">@Model.Email</p>
                            <p class="text-muted"><i class="fas fa-calendar me-1"></i>Member since @Model.CreatedAt.ToString("MMMM yyyy")</p>
                            
                            <!-- Quick Stats -->
                            <div class="row text-center mt-3">
                                <div class="col-4">
                                    <h6 class="mb-0">@(Model.DrivingExperienceYears ?? 0)</h6>
                                    <small class="text-muted">Years Experience</small>
                                </div>
                                <div class="col-4">
                                    <h6 class="mb-0">@(Model.PreferredCarType ?? "Not Set")</h6>
                                    <small class="text-muted">Preferred Type</small>
                                </div>
                                <div class="col-4">
                                    <h6 class="mb-0">Active</h6>
                                    <small class="text-muted">Status</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="card shadow">
                        <div class="card-header">
                            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-search me-2"></i>Browse Cars
                                </a>
                                <a href="@Url.Action("MyBookings", "Home")" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-calendar-check me-2"></i>My Bookings
                                </a>
                                <button class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-history me-2"></i>Rental History
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Details -->
                <div class="col-lg-8">
                    <form id="profileForm">
                        <!-- Personal Information -->
                        <div class="card shadow mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Personal Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="firstName" class="form-label">First Name *</label>
                                            <input type="text" class="form-control" id="firstName" value="@Model.FirstName" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="lastName" class="form-label">Last Name *</label>
                                            <input type="text" class="form-control" id="lastName" value="@Model.LastName" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="email" class="form-label">Email Address *</label>
                                            <input type="email" class="form-control" id="email" value="@Model.Email" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="phoneNumber" class="form-label">Phone Number *</label>
                                            <input type="text" class="form-control" id="phoneNumber" value="@Model.PhoneNumber" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="address" class="form-label">Address</label>
                                    <textarea class="form-control" id="address" rows="2" readonly>@Model.Address</textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Driving Information -->
                        <div class="card shadow mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Driving Information</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="licenseNumber" class="form-label">License Number</label>
                                            <input type="text" class="form-control" id="licenseNumber" value="@Model.LicenseNumber" readonly>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="drivingExperience" class="form-label">Driving Experience (Years)</label>
                                            <input type="number" class="form-control" id="drivingExperience" value="@Model.DrivingExperienceYears" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="preferredCarType" class="form-label">Preferred Car Type</label>
                                            <select class="form-control" id="preferredCarType" disabled>
                                                <option value="">Select Car Type</option>
                                                @{
                                                    var carTypes = new[] { "Motor Bike", "CNG", "Private Car", "Pickup", "Truck", "Covered Van" };
                                                }
                                                @foreach (var carType in carTypes)
                                                {
                                                    @if (Model.PreferredCarType == carType)
                                                    {
                                                        <option value="@carType" selected>@carType</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@carType">@carType</option>
                                                    }
                                                }
                                            </select>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-3">
                                            <label for="carNumber" class="form-label">Car Number</label>
                                            <input type="text" class="form-control" id="carNumber" value="@Model.CarNumber" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Document Images -->
                        <div class="card shadow mb-4">
                            <div class="card-header">
                                <h6 class="m-0 font-weight-bold text-primary">Documents & Images</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group mb-4">
                                            <label class="form-label">Driving License Image</label>
                                            <div class="image-upload-container">
                                                <input type="file" id="licenseImageInput" accept="image/*" style="display: none;">
                                                <div class="image-preview-container">
                                                    @if (!string.IsNullOrEmpty(Model.DrivingLicenseImageUrl))
                                                    {
                                                        <img id="licenseImagePreview" src="@Model.DrivingLicenseImageUrl" 
                                                             alt="Driving License" class="img-thumbnail" style="max-width: 200px; max-height: 150px;">
                                                    }
                                                    else
                                                    {
                                                        <div id="licenseImagePreview" class="image-placeholder">
                                                            <i class="fas fa-id-card fa-3x text-muted"></i>
                                                            <p class="text-muted mt-2">No license image uploaded</p>
                                                        </div>
                                                    }
                                                </div>
                                                <button type="button" class="btn btn-outline-primary btn-sm mt-2 upload-doc-btn" 
                                                        onclick="document.getElementById('licenseImageInput').click()" style="display: none;">
                                                    <i class="fas fa-upload me-1"></i>Upload License
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group mb-4">
                                            <label class="form-label">National ID Image</label>
                                            <div class="image-upload-container">
                                                <input type="file" id="nidImageInput" accept="image/*" style="display: none;">
                                                <div class="image-preview-container">
                                                    @if (!string.IsNullOrEmpty(Model.NidImageUrl))
                                                    {
                                                        <img id="nidImagePreview" src="@Model.NidImageUrl" 
                                                             alt="National ID" class="img-thumbnail" style="max-width: 200px; max-height: 150px;">
                                                    }
                                                    else
                                                    {
                                                        <div id="nidImagePreview" class="image-placeholder">
                                                            <i class="fas fa-id-badge fa-3x text-muted"></i>
                                                            <p class="text-muted mt-2">No NID image uploaded</p>
                                                        </div>
                                                    }
                                                </div>
                                                <button type="button" class="btn btn-outline-primary btn-sm mt-2 upload-doc-btn" 
                                                        onclick="document.getElementById('nidImageInput').click()" style="display: none;">
                                                    <i class="fas fa-upload me-1"></i>Upload NID
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Save Button -->
                        <div class="card shadow" id="saveSection" style="display: none;">
                            <div class="card-body text-center">
                                <button type="button" class="btn btn-success me-2" onclick="saveProfile()">
                                    <i class="fas fa-save me-1"></i>Save Changes
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="cancelEdit()">
                                    <i class="fas fa-times me-1"></i>Cancel
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        let isEditMode = false;
        let originalData = {};

        $(document).ready(function() {
            // Store original form data
            storeOriginalData();
            
            // Setup image upload handlers
            setupImageUploads();
        });

        function storeOriginalData() {
            originalData = {
                firstName: $('#firstName').val(),
                lastName: $('#lastName').val(),
                phoneNumber: $('#phoneNumber').val(),
                address: $('#address').val(),
                licenseNumber: $('#licenseNumber').val(),
                drivingExperience: $('#drivingExperience').val(),
                preferredCarType: $('#preferredCarType').val(),
                carNumber: $('#carNumber').val()
            };
        }

        function toggleEditMode() {
            isEditMode = !isEditMode;
            
            if (isEditMode) {
                // Enable edit mode
                $('#firstName, #lastName, #phoneNumber, #address, #licenseNumber, #drivingExperience, #carNumber').prop('readonly', false);
                $('#preferredCarType').prop('disabled', false);
                $('.upload-doc-btn, .image-upload-overlay').show();
                $('#saveSection').show();
                $('#editButtonText').text('Cancel Edit');
            } else {
                // Disable edit mode
                restoreOriginalData();
                disableEditMode();
            }
        }

        function disableEditMode() {
            $('#firstName, #lastName, #phoneNumber, #address, #licenseNumber, #drivingExperience, #carNumber').prop('readonly', true);
            $('#preferredCarType').prop('disabled', true);
            $('.upload-doc-btn, .image-upload-overlay').hide();
            $('#saveSection').hide();
            $('#editButtonText').text('Edit Profile');
            isEditMode = false;
        }

        function restoreOriginalData() {
            $('#firstName').val(originalData.firstName);
            $('#lastName').val(originalData.lastName);
            $('#phoneNumber').val(originalData.phoneNumber);
            $('#address').val(originalData.address);
            $('#licenseNumber').val(originalData.licenseNumber);
            $('#drivingExperience').val(originalData.drivingExperience);
            $('#preferredCarType').val(originalData.preferredCarType);
            $('#carNumber').val(originalData.carNumber);
        }

        function cancelEdit() {
            restoreOriginalData();
            disableEditMode();
        }

        function saveProfile() {
            if (!validateForm()) {
                return;
            }

            const profileData = {
                id: @Model.Id,
                firstName: $('#firstName').val(),
                lastName: $('#lastName').val(),
                email: '@Model.Email', // Email is not editable
                phoneNumber: $('#phoneNumber').val(),
                address: $('#address').val(),
                profileImageUrl: $('#profileImage').attr('src') === 'https://via.placeholder.com/120x120/007bff/ffffff?text=User' ? null : $('#profileImage').attr('src'),
                preferredCarType: $('#preferredCarType').val(),
                drivingLicenseImageUrl: getCurrentImageUrl('licenseImagePreview'),
                nidImageUrl: getCurrentImageUrl('nidImagePreview'),
                carNumber: $('#carNumber').val(),
                drivingExperienceYears: $('#drivingExperience').val() ? parseInt($('#drivingExperience').val()) : null,
                licenseNumber: $('#licenseNumber').val()
            };

            $.ajax({
                url: '@Url.Action("UpdateProfile", "Home")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(profileData),
                success: function(response) {
                    if (response.success) {
                        alert('Profile updated successfully!');
                        storeOriginalData();
                        disableEditMode();
                        location.reload(); // Refresh to show updated data
                    } else {
                        alert('Error: ' + response.message);
                    }
                },
                error: function() {
                    alert('An error occurred while saving the profile.');
                }
            });
        }

        function getCurrentImageUrl(elementId) {
            const element = $('#' + elementId);
            if (element.is('img')) {
                const src = element.attr('src');
                return src && src !== 'https://via.placeholder.com/120x120/007bff/ffffff?text=User' ? src : null;
            }
            return null;
        }

        function validateForm() {
            if ($('#firstName').val().trim() === '') {
                alert('First name is required.');
                return false;
            }
            if ($('#lastName').val().trim() === '') {
                alert('Last name is required.');
                return false;
            }
            if ($('#phoneNumber').val().trim() === '') {
                alert('Phone number is required.');
                return false;
            }
            return true;
        }

        function setupImageUploads() {
            // Profile image upload
            $('#profileImageInput').change(function() {
                uploadImage(this, 'profile', function(url) {
                    $('#profileImage').attr('src', url);
                });
            });

            // License image upload
            $('#licenseImageInput').change(function() {
                uploadImage(this, 'document', function(url) {
                    $('#licenseImagePreview').replaceWith(
                        `<img id="licenseImagePreview" src="${url}" alt="Driving License" class="img-thumbnail" style="max-width: 200px; max-height: 150px;">`
                    );
                });
            });

            // NID image upload
            $('#nidImageInput').change(function() {
                uploadImage(this, 'document', function(url) {
                    $('#nidImagePreview').replaceWith(
                        `<img id="nidImagePreview" src="${url}" alt="National ID" class="img-thumbnail" style="max-width: 200px; max-height: 150px;">`
                    );
                });
            });
        }

        function uploadImage(input, type, callback) {
            if (input.files && input.files[0]) {
                const formData = new FormData();
                formData.append('file', input.files[0]);

                $.ajax({
                    url: '@Url.Action("UploadProfileImage", "Home")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(response) {
                        if (response.success) {
                            callback(response.url);
                        } else {
                            alert('Error uploading image: ' + response.message);
                        }
                    },
                    error: function() {
                        alert('An error occurred while uploading the image.');
                    }
                });
            }
        }
    </script>
}

