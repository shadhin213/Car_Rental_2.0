@{
    ViewData["Title"] = "Customer Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-primary sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">Customer Portal</h4>
                    <p class="text-light">Welcome, @ViewBag.UserName</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white active" href="#dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AvailableCars", "Home")">
                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#my-bookings">
                            <i class="fas fa-calendar-check me-2"></i>My Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#rental-history">
                            <i class="fas fa-history me-2"></i>Rental History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#profile">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#support">
                            <i class="fas fa-headset me-2"></i>Support
                        </a>
                    </li>
                </ul>
                <hr class="text-white">
                <div class="text-center">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Customer Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshData()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                    <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-sm btn-primary">
                        <i class="fas fa-search me-1"></i>Find Cars
                    </a>
                </div>
            </div>

            <!-- Welcome Message -->
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">Welcome to your dashboard!</h4>
                <p>Here you can browse available vehicles, manage your bookings, and track your rental history.</p>
                <hr>
                <p class="mb-0">Need help? Contact our support team anytime.</p>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Available Cars
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="availableCars">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-car fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        My Bookings
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="myBookings">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Total Rentals
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalRentals">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-history fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Loyalty Points
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="loyaltyPoints">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-star fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Featured Vehicles -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Featured Vehicles</h6>
                        </div>
                        <div class="card-body">
                            <div class="row" id="featuredVehicles">
                                <!-- Featured vehicles will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity and Quick Actions -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Recent Activity</h6>
                        </div>
                        <div class="card-body">
                            <div class="timeline" id="recentActivity">
                                <!-- Recent activity will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Browse Available Cars
                                </a>
                                <button class="btn btn-info" onclick="viewMyBookings()">
                                    <i class="fas fa-calendar-check me-2"></i>View My Bookings
                                </button>
                                <button class="btn btn-success" onclick="viewRentalHistory()">
                                    <i class="fas fa-history me-2"></i>Rental History
                                </button>
                                <button class="btn btn-warning" onclick="updateProfile()">
                                    <i class="fas fa-user-edit me-2"></i>Update Profile
                                </button>
                                <button class="btn btn-secondary" onclick="contactSupport()">
                                    <i class="fas fa-headset me-2"></i>Contact Support
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadCustomerDashboardData();
        });

        function loadCustomerDashboardData() {
            // Load available cars count
            $.get('@Url.Action("GetFleet", "Home")', function(data) {
                var availableCars = data.filter(v => v.status === 'Available').length;
                $('#availableCars').text(availableCars);
                
                // Load featured vehicles (first 4 available)
                loadFeaturedVehicles(data.filter(v => v.status === 'Available').slice(0, 4));
            });

            // Load mock data for other statistics
            $('#myBookings').text('2');
            $('#totalRentals').text('8');
            $('#loyaltyPoints').text('450');

            // Load recent activity
            loadRecentActivity();
        }

        function loadFeaturedVehicles(vehicles) {
            var container = $('#featuredVehicles');
            container.empty();

            vehicles.forEach(function(vehicle) {
                container.append(`
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card h-100">
                            <img src="${vehicle.imageUrl}" class="card-img-top" alt="${vehicle.model}" style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title">${vehicle.model} ${vehicle.year}</h6>
                                <p class="card-text">
                                    <small class="text-muted">${vehicle.vehicleType}</small><br>
                                    <strong>$${vehicle.dailyRate}/day</strong>
                                </p>
                                <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                `);
            });
        }

        function loadRecentActivity() {
            var activities = [
                { type: 'booking', message: 'New booking confirmed for Toyota Camry', time: '2 hours ago', icon: 'fas fa-calendar-check', color: 'success' },
                { type: 'rental', message: 'Rental completed for Honda Civic', time: '1 day ago', icon: 'fas fa-check-circle', color: 'info' },
                { type: 'payment', message: 'Payment processed successfully', time: '2 days ago', icon: 'fas fa-credit-card', color: 'primary' },
                { type: 'support', message: 'Support ticket resolved', time: '3 days ago', icon: 'fas fa-headset', color: 'warning' }
            ];

            var container = $('#recentActivity');
            container.empty();

            activities.forEach(function(activity) {
                container.append(`
                    <div class="timeline-item">
                        <div class="timeline-marker bg-${activity.color}">
                            <i class="${activity.icon} text-white"></i>
                        </div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">${activity.message}</h6>
                            <p class="timeline-time">${activity.time}</p>
                        </div>
                    </div>
                `);
            });
        }

        function refreshData() {
            loadCustomerDashboardData();
            alert('Data refreshed successfully!');
        }

        function viewMyBookings() {
            alert('My Bookings feature will be implemented soon!');
        }

        function viewRentalHistory() {
            alert('Rental History feature will be implemented soon!');
        }

        function updateProfile() {
            alert('Profile update feature will be implemented soon!');
        }

        function contactSupport() {
            alert('Support contact feature will be implemented soon!');
        }
    </script>
}

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar .nav-link {
        color: #fff;
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        margin: 0.25rem 0.5rem;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }

    .text-xs {
        font-size: 0.7rem;
    }

    .text-gray-800 {
        color: #5a5c69 !important;
    }

    .text-gray-300 {
        color: #dddfeb !important;
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -35px;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        border-left: 3px solid #e9ecef;
    }

    .timeline-title {
        margin: 0 0 5px 0;
        font-size: 14px;
        font-weight: 600;
    }

    .timeline-time {
        margin: 0;
        font-size: 12px;
        color: #6c757d;
    }
</style>
