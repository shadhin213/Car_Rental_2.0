@{
    ViewData["Title"] = "Customer Dashboard";
}

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar .nav-link {
        color: #fff;
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        margin: 0.25rem 0.5rem;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .profile-image-container {
        position: relative;
    }

    .image-upload-overlay {
        position: absolute;
        bottom: 0;
        right: 0;
    }

    .upload-btn {
        width: 30px;
        height: 30px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .image-placeholder {
        border: 2px dashed #dee2e6;
        border-radius: 0.375rem;
        padding: 2rem;
        text-align: center;
        background-color: #f8f9fa;
        min-height: 150px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .image-upload-container {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 1rem;
        text-align: center;
    }

    .img-thumbnail {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 0.25rem;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }

    .card {
        border: none;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
    }

    .card-header {
        background-color: #f8f9fc;
        border-bottom: 1px solid #e3e6f0;
    }

    .text-xs {
        font-size: 0.7rem;
    }

    @@media (max-width: 768px) {
        .sidebar {
            position: relative;
            height: auto;
        }
    }
</style>

<!-- Sidebar Toggle Button -->
<button class="sidebar-toggle" id="sidebarToggle">
    <i class="fas fa-bars"></i>
</button>

<!-- Sidebar Overlay -->
<div class="sidebar-overlay" id="sidebarOverlay"></div>

<div class="container-fluid">
    <div class="row">
         <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">Customer Portal</h4>
                    <p class="text-light">Welcome, @ViewBag.UserName</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white active" href="@Url.Action("CustomerDashboard", "Home")">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("AvailableCars", "Home")">
                            <i class="fas fa-car me-2"></i>Browse Cars
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("MyBookings", "Home")">
                            <i class="fas fa-calendar-check me-2"></i>My Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("RentalHistory", "Home")">
                            <i class="fas fa-history me-2"></i>Rental History
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white " href="@Url.Action("Profile", "Home")">
                            <i class="fas fa-user me-2"></i>My Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#" data-bs-toggle="modal" data-bs-target="#complainModal">
                            <i class="fas fa-exclamation-circle me-2"></i>Complain
                        </a>
                    </li>
                </ul>
                <hr class="text-white">
                <div class="text-center">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm  text-light">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>


        <!-- Main content -->
        <main class="main-content" id="mainContent">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center border-bottom">
                <h1 class="h2">Customer Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshData()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                    <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-sm btn-primary">
                        <i class="fas fa-search me-1"></i>Find Cars
                    </a>
                </div>
            </div>

            <!-- Welcome Message -->
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">Welcome to your dashboard!</h4>
                <p>Here you can browse available vehicles, manage your bookings, and track your rental history.</p>
                <hr>
                <p class="mb-0">Need help? Contact our support team anytime.</p>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Available Cars
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="availableCars">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-car fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        My Bookings
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="myBookings">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Total Rentals
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalRentals">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-history fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Loyalty Points
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="loyaltyPoints">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-star fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Featured Vehicles -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Featured Vehicles</h6>
                        </div>
                        <div class="card-body">
                            <div class="row" id="featuredVehicles">
                                <!-- Featured vehicles will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity and Quick Actions -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Recent Activity</h6>
                        </div>
                        <div class="card-body">
                            <div class="timeline" id="recentActivity">
                                <!-- Recent activity will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary">
                                    <i class="fas fa-search me-2"></i>Browse Available Cars
                                </a>
                                <button class="btn btn-info" onclick="viewMyBookings()">
                                    <i class="fas fa-calendar-check me-2"></i>View My Bookings
                                </button>
                                <button class="btn btn-success" onclick="viewRentalHistory()">
                                    <i class="fas fa-history me-2"></i>Rental History
                                </button>
                                <button class="btn btn-warning" onclick="window.location.href='@Url.Action("Profile", "Home")'">
                                    <i class="fas fa-user-edit me-2"></i>Update Profile
                                </button>
                                <button class="btn btn-secondary" onclick="contactSupport()">
                                    <i class="fas fa-headset me-2"></i>Contact Support
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Complain Modal -->
<div class="modal fade" id="complainModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-circle me-2"></i>Submit a Complaint</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="complainForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="complainSubject" class="form-label">Subject <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="complainSubject" required>
                        </div>
                        <div class="col-md-6">
                            <label for="complainCategory" class="form-label">Category <span class="text-danger">*</span></label>
                            <select id="complainCategory" class="form-select" required>
                                <option value="">Select a category</option>
                                <option>Vehicle Issue</option>
                                <option>Booking Problem</option>
                                <option>Payment/Billing</option>
                                <option>Staff Behavior</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="complainMessage" class="form-label">Message <span class="text-danger">*</span></label>
                            <textarea id="complainMessage" class="form-control" rows="5" placeholder="Describe your issue in detail" required></textarea>
                        </div>
                        <div class="col-12">
                            <label for="complainAttachment" class="form-label">Attachment (optional)</label>
                            <input type="file" id="complainAttachment" class="form-control" accept="image/*,.pdf,.doc,.docx">
                            <small class="text-muted">You can attach screenshots or documents to help us understand the issue.</small>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="submitComplainBtn">
                    <i class="fas fa-paper-plane me-1"></i> Submit Complaint
                </button>
            </div>
        </div>
    </div>
    </div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadCustomerDashboardData();
            initializeSidebar();
            initializeComplainBox();
        });

        function initializeSidebar() {
            const sidebarToggle = $('#sidebarToggle');
            const sidebar = $('#sidebar');
            const sidebarOverlay = $('#sidebarOverlay');
            const mainContent = $('#mainContent');

            // Toggle sidebar on button click
            sidebarToggle.click(function() {
                sidebar.toggleClass('show');
                sidebarOverlay.toggleClass('show');
                mainContent.toggleClass('shifted');
            });

            // Close sidebar when clicking overlay
            sidebarOverlay.click(function() {
                sidebar.removeClass('show');
                sidebarOverlay.removeClass('show');
                mainContent.removeClass('shifted');
            });

            // Close sidebar when clicking outside on mobile
            $(document).click(function(e) {
                if (!$(e.target).closest('#sidebar, #sidebarToggle').length) {
                    if (window.innerWidth < 992) {
                        sidebar.removeClass('show');
                        sidebarOverlay.removeClass('show');
                        mainContent.removeClass('shifted');
                    }
                }
            });

            // Handle window resize
            $(window).resize(function() {
                if (window.innerWidth >= 992) {
                    sidebar.removeClass('show');
                    sidebarOverlay.removeClass('show');
                    mainContent.removeClass('shifted');
                }
            });

            // Smooth scrolling for anchor links
            $('.sidebar-link[href^="#"]').click(function(e) {
                e.preventDefault();
                const target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').animate({
                        scrollTop: target.offset().top - 100
                    }, 600);
                }
                
                // Close sidebar on mobile after clicking link
                if (window.innerWidth < 992) {
                    sidebar.removeClass('show');
                    sidebarOverlay.removeClass('show');
                    mainContent.removeClass('shifted');
                }
            });
        }

        function loadCustomerDashboardData() {
            // Load available cars count
            $.get('@Url.Action("GetFleet", "Home")', function(data) {
                var availableCars = data.filter(v => v.status === 'Available').length;
                $('#availableCars').text(availableCars);
                
                // Load featured vehicles (first 4 available)
                loadFeaturedVehicles(data.filter(v => v.status === 'Available').slice(0, 4));
            });

            // Load mock data for other statistics
            $('#myBookings').text('2');
            $('#totalRentals').text('8');
            $('#loyaltyPoints').text('450');

            // Load recent activity
            loadRecentActivity();
        }

        function loadFeaturedVehicles(vehicles) {
            var container = $('#featuredVehicles');
            container.empty();

            vehicles.forEach(function(vehicle) {
                container.append(`
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card h-100">
                            <img src="${vehicle.imageUrl}" class="card-img-top" alt="${vehicle.model}" style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <h6 class="card-title">${vehicle.model} ${vehicle.year}</h6>
                                <p class="card-text">
                                    <small class="text-muted">${vehicle.vehicleType}</small><br>
                                    <strong>$${vehicle.dailyRate}/day</strong>
                                </p>
                                <a href="@Url.Action("AvailableCars", "Home")" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                        </div>
                    </div>
                `);
            });
        }

        function loadRecentActivity() {
            var activities = [
                { type: 'booking', message: 'New booking confirmed for Toyota Camry', time: '2 hours ago', icon: 'fas fa-calendar-check', color: 'success' },
                { type: 'rental', message: 'Rental completed for Honda Civic', time: '1 day ago', icon: 'fas fa-check-circle', color: 'info' },
                { type: 'payment', message: 'Payment processed successfully', time: '2 days ago', icon: 'fas fa-credit-card', color: 'primary' },
                { type: 'support', message: 'Support ticket resolved', time: '3 days ago', icon: 'fas fa-headset', color: 'warning' }
            ];

            var container = $('#recentActivity');
            container.empty();

            activities.forEach(function(activity) {
                container.append(`
                    <div class="timeline-item">
                        <div class="timeline-marker bg-${activity.color}">
                            <i class="${activity.icon} text-white"></i>
                        </div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">${activity.message}</h6>
                            <p class="timeline-time">${activity.time}</p>
                        </div>
                    </div>
                `);
            });
        }

        function refreshData() {
            loadCustomerDashboardData();
            alert('Data refreshed successfully!');
        }

        function viewMyBookings() {
            window.location.href = '@Url.Action("MyBookings", "Home")';
        }

        function viewRentalHistory() {
            window.location.href = '@Url.Action("RentalHistory", "Home")';
        }

        function contactSupport() {
            alert('Support contact feature will be implemented soon!');
        }

        function initializeComplainBox() {
            // Handle submit button click
            $('#submitComplainBtn').on('click', function () {
                const subject = $('#complainSubject').val().trim();
                const category = $('#complainCategory').val();
                const message = $('#complainMessage').val().trim();

                if (!subject || !category || !message) {
                    alert('Please fill in Subject, Category, and Message.');
                    return;
                }

                // Placeholder submission: Show success and reset form
                alert('Your complaint has been submitted. Our team will contact you shortly.');
                $('#complainForm')[0].reset();

                // Close modal (Bootstrap 5)
                const modalEl = document.getElementById('complainModal');
                const modal = bootstrap.Modal.getInstance(modalEl) || new bootstrap.Modal(modalEl);
                modal.hide();
            });
        }
    </script>
}
