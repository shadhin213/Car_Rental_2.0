<script>
    // Prevent sidebar scroll from affecting main page scroll and vice versa
    document.addEventListener('DOMContentLoaded', function() {
        const sidebar = document.getElementById('sidebarMenu');
        const mainContent = document.querySelector('main');
        
        if (sidebar && mainContent) {
            // Prevent sidebar scroll from affecting main content
            sidebar.addEventListener('wheel', function(e) {
                // Prevent the wheel event from bubbling up to the main page
                e.stopPropagation();
                
                const scrollTop = this.scrollTop;
                const scrollHeight = this.scrollHeight;
                const height = this.clientHeight;
                const delta = e.deltaY;
                
                // Check if we're at the top or bottom of the sidebar
                if ((delta < 0 && scrollTop === 0) || 
                    (delta > 0 && scrollTop + height >= scrollHeight)) {
                    // Prevent default only when we can't scroll further in the sidebar
                    e.preventDefault();
                }
            });
            
            // Prevent main content scroll from affecting sidebar
            mainContent.addEventListener('wheel', function(e) {
                // Prevent the wheel event from bubbling up to the sidebar
                e.stopPropagation();
            });
            
            // Also prevent touch events from affecting each other on mobile
            sidebar.addEventListener('touchstart', function(e) {
                e.stopPropagation();
            });
            
            sidebar.addEventListener('touchmove', function(e) {
                e.stopPropagation();
            });
            
            mainContent.addEventListener('touchstart', function(e) {
                e.stopPropagation();
            });
            
            mainContent.addEventListener('touchmove', function(e) {
                e.stopPropagation();
            });
            
            // Prevent scroll events from propagating between elements
            sidebar.addEventListener('scroll', function(e) {
                e.stopPropagation();
            });
            
            mainContent.addEventListener('scroll', function(e) {
                e.stopPropagation();
            });
        }
    });
</script> 