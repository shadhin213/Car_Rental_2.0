@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-success sidebar">
            <div class="position-sticky pt-3">
                <div class="text-center mb-4">
                    <h4 class="text-white">Manager Panel</h4>
                    <p class="text-light">Welcome, @ViewBag.UserName</p>
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white active" href="#dashboard">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("FleetManagement", "Home")">
                            <i class="fas fa-car me-2"></i>Fleet Management
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("ViewAllVehicles", "Home")">
                            <i class="fas fa-list me-2"></i>All Vehicles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#bookings">
                            <i class="fas fa-calendar-check me-2"></i>Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#customers">
                            <i class="fas fa-users me-2"></i>Customers
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#reports">
                            <i class="fas fa-chart-bar me-2"></i>Reports
                        </a>
                    </li>
                </ul>
                <hr class="text-white">
                <div class="text-center">
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-sign-out-alt me-1"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Manager Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="refreshData()">
                            <i class="fas fa-sync-alt me-1"></i>Refresh
                        </button>
                    </div>
                    <a href="@Url.Action("FleetManagement", "Home")" class="btn btn-sm btn-success">
                        <i class="fas fa-plus me-1"></i>Add Vehicle
                    </a>
                </div>
            </div>

            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Vehicles
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalVehicles">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-car fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Available Vehicles
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="availableVehicles">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Active Bookings
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="activeBookings">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Revenue Today
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800" id="revenueToday">$0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Fleet Overview and Recent Activities -->
            <div class="row">
                <div class="col-lg-8">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Fleet Overview</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="fleetOverviewTable">
                                    <thead>
                                        <tr>
                                            <th>Vehicle</th>
                                            <th>Status</th>
                                            <th>Daily Rate</th>
                                            <th>Last Activity</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data will be loaded via JavaScript -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("FleetManagement", "Home")" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Add New Vehicle
                                </a>
                                <a href="@Url.Action("ViewAllVehicles", "Home")" class="btn btn-info">
                                    <i class="fas fa-list me-2"></i>View All Vehicles
                                </a>
                                <button class="btn btn-warning" onclick="viewBookings()">
                                    <i class="fas fa-calendar-check me-2"></i>Manage Bookings
                                </button>
                                <button class="btn btn-primary" onclick="viewCustomers()">
                                    <i class="fas fa-users me-2"></i>View Customers
                                </button>
                                <button class="btn btn-secondary" onclick="generateReport()">
                                    <i class="fas fa-file-pdf me-2"></i>Generate Report
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Recent Activities -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Recent Activities</h6>
                        </div>
                        <div class="card-body">
                            <div class="timeline" id="recentActivities">
                                <!-- Recent activities will be loaded here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadManagerDashboardData();
        });

        function loadManagerDashboardData() {
            // Load vehicle statistics
            $.get('@Url.Action("GetFleet", "Home")', function(data) {
                var totalVehicles = data.length;
                var availableVehicles = data.filter(v => v.status === 'Available').length;
                var rentedVehicles = data.filter(v => v.status === 'Rented').length;
                
                $('#totalVehicles').text(totalVehicles);
                $('#availableVehicles').text(availableVehicles);
                $('#activeBookings').text(rentedVehicles);
                
                // Load fleet overview
                loadFleetOverview(data);
            });

            // Load mock data for other statistics
            $('#revenueToday').text('$1,250');

            // Load recent activities
            loadRecentActivities();
        }

        function loadFleetOverview(vehicles) {
            var tbody = $('#fleetOverviewTable tbody');
            tbody.empty();
            
            // Show first 10 vehicles
            vehicles.slice(0, 10).forEach(function(vehicle) {
                var statusClass = vehicle.status === 'Available' ? 'success' : 
                                 vehicle.status === 'Rented' ? 'warning' : 'danger';
                tbody.append(`
                    <tr>
                        <td>${vehicle.model} ${vehicle.year}</td>
                        <td><span class="badge bg-${statusClass}">${vehicle.status}</span></td>
                        <td>$${vehicle.dailyRate}</td>
                        <td>${new Date(vehicle.createdAt).toLocaleDateString()}</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" onclick="viewVehicle(${vehicle.id})">
                                <i class="fas fa-eye"></i>
                            </button>
                        </td>
                    </tr>
                `);
            });
        }

        function loadRecentActivities() {
            var activities = [
                { message: 'New vehicle added: BMW X5 2023', time: '1 hour ago', icon: 'fas fa-plus', color: 'success' },
                { message: 'Booking confirmed for Toyota Camry', time: '2 hours ago', icon: 'fas fa-calendar-check', color: 'info' },
                { message: 'Vehicle returned: Honda Civic', time: '3 hours ago', icon: 'fas fa-undo', color: 'warning' },
                { message: 'Maintenance scheduled for Ford F-150', time: '1 day ago', icon: 'fas fa-wrench', color: 'primary' }
            ];

            var container = $('#recentActivities');
            container.empty();

            activities.forEach(function(activity) {
                container.append(`
                    <div class="timeline-item">
                        <div class="timeline-marker bg-${activity.color}">
                            <i class="${activity.icon} text-white"></i>
                        </div>
                        <div class="timeline-content">
                            <h6 class="timeline-title">${activity.message}</h6>
                            <p class="timeline-time">${activity.time}</p>
                        </div>
                    </div>
                `);
            });
        }

        function refreshData() {
            loadManagerDashboardData();
            alert('Data refreshed successfully!');
        }

        function viewBookings() {
            alert('Bookings management feature will be implemented soon!');
        }

        function viewCustomers() {
            alert('Customer management feature will be implemented soon!');
        }

        function generateReport() {
            alert('Report generation feature will be implemented soon!');
        }

        function viewVehicle(vehicleId) {
            alert('Vehicle details for ID: ' + vehicleId + ' will be implemented soon!');
        }
    </script>
}

<style>
    .sidebar {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        z-index: 100;
        padding: 48px 0 0;
        box-shadow: inset -1px 0 0 rgba(0, 0, 0, .1);
    }

    .sidebar .nav-link {
        color: #fff;
        padding: 0.75rem 1rem;
        border-radius: 0.375rem;
        margin: 0.25rem 0.5rem;
    }

    .sidebar .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .sidebar .nav-link.active {
        background-color: rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .border-left-primary {
        border-left: 0.25rem solid #4e73df !important;
    }

    .border-left-success {
        border-left: 0.25rem solid #1cc88a !important;
    }

    .border-left-info {
        border-left: 0.25rem solid #36b9cc !important;
    }

    .border-left-warning {
        border-left: 0.25rem solid #f6c23e !important;
    }

    .text-xs {
        font-size: 0.7rem;
    }

    .text-gray-800 {
        color: #5a5c69 !important;
    }

    .text-gray-300 {
        color: #dddfeb !important;
    }

    .timeline {
        position: relative;
        padding-left: 30px;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 20px;
    }

    .timeline-marker {
        position: absolute;
        left: -35px;
        top: 0;
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 5px;
        border-left: 3px solid #e9ecef;
    }

    .timeline-title {
        margin: 0 0 5px 0;
        font-size: 14px;
        font-weight: 600;
    }

    .timeline-time {
        margin: 0;
        font-size: 12px;
        color: #6c757d;
    }
</style>
